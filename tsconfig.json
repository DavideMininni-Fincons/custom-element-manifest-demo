{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2021",
        "module": "esnext",
        "lib": ["es2021", "DOM", "DOM.Iterable"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "allowJs": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noUnusedLocals": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "types": ["mocha"],
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules/"]
}
